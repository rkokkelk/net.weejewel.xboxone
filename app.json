{
    "id": "net.weejewel.xboxone",
    "sdk": 2,
    "name": {
        "en": "Xbox One",
        "nl": "Xbox One"
    },
    "version": "2.0.1",
    "compatibility": "0.x || 1.x",
    "author": {
        "name": "Roy Kokkelkoren",
        "email": "roy.kokkelkoren@gmail.com"
    },
    "contributors": {
      "developers": [
        {
          "name": "Roy Kokkelkoren",
          "email": "roy.kokkelkoren@gmail.com"
        },
        {
          "name": "Emile Nijssen",
          "email": "emilenijssen@gmail.com"
        }
      ]
    },
    "tags": {
      "en": [
        "Xbox",
        "Xbox One"
      ],
      "nl": [
        "Xbox",
        "Xbox One"
      ]
    },
    "images": {
      "large": "/assets/images/large.png",
      "small": "/assets/images/small.png"
    },
    "category": [ "appliances" ],
    "description": {
      "en": "Power On your Xbox One",
      "nl": "Start je Xbox One"
    },
    "drivers": [
      {
        "id": "xboxone",
        "name": {
          "en": "Xbox One",
          "nl": "Xbox One"
        },
        "images": {
          "large": "/drivers/xboxone/assets/images/large.png",
          "small": "/drivers/xboxone/assets/images/small.png"
        },
        "class": "other",
        "capabilities": [ "onoff" ],
        "mobile": {
          "components": [
            {
              "id": "icon",
              "capabilities": [ "onoff" ]
            },
            {
              "id": "toggle",
              "capabilities": [ "onoff" ]
            }
          ]
        },
        "pair": [
          {
            "id": "index"
          }
        ],
        "settings": [
            {
                    "type": "group",
                    "label": {
                        "en": "Xbox One",
                        "nl": "Xbox One"
                    },
                    "children": [
                    {
                        "id": "address",
                        "type": "text",
                        "value": "",
                        "label": {
                            "en": "Address",
                            "nl": "Adres"
                        },
                        "hint": {
                          "en": "On your Xbox, go to Settings > Network > Network Settings > Advanced Settings",
                          "nl": "Op de Xbox, ga naar Opties > Netwerk > Netwerk instellingen > Geadvanceerde instellingen"
                        }
                    },
                    {
                        "id": "live_id",
                        "type": "label",
                        "value": "",
                        "label": {
                            "en": "Xbox Live ID",
                            "nl": "Xbox Live ID"
                        }
                    }
                ]
            }
        ]
      }
    ],
    "flow": {
      "actions": [
          {
          "id": "turn_on",
          "title": {
              "en": "Start the Xbox One.",
              "nl": "Start de Xbox One."
          },
          "args": [
            {
              "name": "xbox",
              "type": "device",
              "filter": "driver_id=xboxone"
            }
          ]
        }
      ]
    }
}
